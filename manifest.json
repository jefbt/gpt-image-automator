{
  "manifest_version": 3,
  "name": "ChatGPT Auto Image Generator",
  "version": "1.0",
  "description": "Automate DALL-E image generation on ChatGPT based on a prompt list.",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "storage"
  ],
  "host_permissions": [
    "https://chatgpt.com/*"
  ],
  "action": {
    "default_title": "Auto Image Generator"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["content.js"]
    }
  ]
}